{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": [
			"bun-types"
		],
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@middleware/*": [
				"src/telegram/middleware/*"
			],
			"@types/*": [
				"/types/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@telegram/*": [
				"src/telegram/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}